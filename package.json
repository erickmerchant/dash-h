{
  "name": "sergeant",
  "version": "28.1.1",
  "homepage": "https://github.com/erickmerchant/sergeant#README",
  "bugs": {
    "url": "https://github.com/erickmerchant/sergeant/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://erickmerchant@github.com/erickmerchant/sergeant.git"
  },
  "license": "ISC",
  "author": "Erick Merchant <erickmerchant@gmail.com>",
  "files": [
    "LICENSE",
    "README.md",
    "error.js",
    "help.js",
    "main.js",
    "parse.js",
    "lib/"
  ],
  "main": "main.js",
  "scripts": {
    "pretest": "eslint '*.js' 'lib/*.js'",
    "test": "ava test.js"
  },
  "dependencies": {
    "kleur": "^3.0.3"
  },
  "devDependencies": {
    "ava": "^3.8.2",
    "babel-eslint": "^10.1.0",
    "delay": "^4.3.0",
    "eslint": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "outdent": "^0.7.1",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3"
  },
  "engines": {
    "node": ">=14.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "prettier/prettier": "error",
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "never"
        }
      ],
      "no-else-return": "error",
      "no-useless-escape": "error",
      "no-useless-return": "error",
      "no-delete-var": "error",
      "no-undef": "error",
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "handle-callback-err": "error",
      "no-path-concat": "error",
      "no-var": "error",
      "prefer-arrow-callback": "error",
      "prefer-const": "error",
      "prefer-template": "error"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "htmlWhitespaceSensitivity": "ignore",
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  }
}
